<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Roland Ortiz</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <style>
        h1 {
            text-align: center;
        }

        .button {
            display: flex;
            justify-content: center;
            align-items: center;
        }
    </style>
</head>

<body class="container mt-5">
    <h1>Let's Create A Product</h1>
    <div class="button">
        <button class="btn btn-dark btn-lg w-25" type="button" data-bs-toggle="modal"
            data-bs-target="#exampleModalValid" data-bs-whatever="@getbootstrap">CREATE</button>
        <button class="btn btn-dark btn-lg ms-2"><a style="text-decoration: none;color: white;"
                href="/">Back</a></button>
    </div>
    <div class="container d-flex text-cente justify-content-center align-items-center mt-2">
        <% products.forEach(function(product) { %>
            <div class="card d-flex text-cente justify-content-center align-items-center" style="width: 18rem;">
                <img src="<%= product.image %>" class="card-img-fluid p-2" alt="..." style="width:300px;height: 300px;">
                <div class="card-body me-auto">
                    <h5 class="card-title">
                        <a href="/products/<%=product._id%>">
                            <%=product.title %>
                        </a>
                    </h5>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">
                            <%= product.price %>
                        </li>

                    </ul>
                    <p class="card-text">
                        <%= product.description %>
                    </p>
                    <a href="/products/<%= product._id %>/edit" class="btn btn-primary">Edit</a>

                    <form class="d-inline" action="/<%=product._id%>?_method=DELETE" method="post">
                        <button class="btn btn-danger">DELETE</button>
                    </form>
                </div>
            </div>
            <% }) %>

    </div>
    <div class="modal fade" id="exampleModalValid" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header p-4 row">
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    <h5 class="modal-title" id="exampleModalLabel" style="color: rgb(10, 6, 255);">CRUD</h5>
                    <ul>
                        <li class="ms-2 p-2"><small class="text-muted">Please Submit the form without putting
                                any
                                Value</small></li>
                    </ul>

                </div>
                <div class="modal-body">
                    <form action="/products" method="POST" class="needs-validation" novalidate>
                        <div class="mb-3">
                            <label for="title" class="col-form-label">Title</label>
                            <input type="text" class="form-control" id="title" name="product[title]" required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                            <div class="invalid-feedback">
                                Please choose a title.
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="image" class="col-form-label">Image</label>
                            <small class="text-muted"><a style="font-size: 9px;color: rgba(169, 169, 169, 0.781);"
                                    href="https://unsplash.com/collections/sINpp38nEQE/product">You
                                    can choose an image here..</a></small>
                            <input type="text" class="form-control" id="image" name="product[image]"
                                value="https://images.unsplash.com/photo-1505740420928-5e560c06d30e?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8M3x8cHJvZHVjdHxlbnwwfHwwfHx8MA%3D%3D&auto=format&fit=crop&w=500&q=60"
                                required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                            <div class="invalid-feedback">
                                Please choose an image.
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="price" class="col-form-label">price</label>
                            <input type="text" class="form-control w-25 form-control-sm" id="price"
                                name="product[price]" required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                            <div class="invalid-feedback">
                                Please choose a price.
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="description" class="col-form-label">Description</label>
                            <textarea name="product[description]" class="form-control" id="description" cols="30"
                                rows="10" required></textarea>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                            <div class="invalid-feedback">
                                Please choose a description.
                            </div>
                        </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-dark" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-dark w-50">Create</button>
                </div>
                </form>
            </div>
        </div>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"></script>
</body>

</html>